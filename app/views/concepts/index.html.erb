
<h1>Create Concepts</h1>
<div class="row">
<div class="col-md-10 offset-md-1 form-content">

<div class ="container">
    <%= simple_form_for @concepts, url: document_concepts_path(@document) do |f| %>
      <% @concepts.each do |concept| %>
        <div class="card-white">
          <%= f.input :prompt, input_html: { name: 'concept[][prompt]', value: concept.prompt } %>
          <%= f.input :content, input_html: { name: 'concept[][content]', value: concept.content } %>
          <label for="concept[][tags][]">Tags</label>
          <select class="js-input-tags" name="concept[][tags][]" multiple >
            <% Tag.all.each do |tag| %>
              <option value="<%= tag.id %>"><%= tag.name %></option>
            <% end %>
          </select>
        </div>

      <% end %>
      <%= f.submit "Finalise concepts", class: "btn btn-primary" %>
    <% end %>
</div>

<!-- concept.prompt.nil? ? nil : :value => concept.content  -->

</div>
</div>
