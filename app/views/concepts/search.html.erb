<div class="row">
<div class="col-md-10 offset-md-1 form-content">

<div class="outer-container">

  <div class="filter-container">
    <h2 align="center">Find your concepts and start a revision</h2>
    <%= form_tag search_path, method: :get do %>
      <div class="filter-inner-container">
        <div class="filter-col">
          <%= label_tag 'Folder' %>
          <%= select_tag "folder", options_from_collection_for_select(@folders, 'id', 'name'), multiple: true, class: 'select2' %>
        </div>
        <div class="filter-col">
          <%= label_tag 'Document' %>
          <%= select_tag "document", options_from_collection_for_select(@documents, 'id', 'name'), multiple: true, class: 'select2' %>
        </div>
        <div class="filter-col">
          <%= label_tag 'Tag' %>
          <%= select_tag "tag", options_from_collection_for_select(@tags, 'id', 'name'), multiple: true, class: 'select2' %>
        </div>
        <%= submit_tag "Filter", class: "btn btn-outline-primary white-btn filter-btn" %>
      </div>
    <% end %>
  </div>


-------------------------------------
<div id="search-content">
<h1>Filter concepts</h1>
<% unless @concepts.nil? %>
<% if @concepts.length > 0 %>
<br>
<%= link_to "Revise These Concepts", revision_sessions_concept_path(id: @concept_ids), method: :post %>
<br>
<% @concepts.each do |concepts| %>
    <div class="card-white">

      <b><%= concepts.prompt %></b>
      <br>
      <%= concepts.content %>

    </div>
<% end %>
<% end %>
<% end %>
</div>
</div>
</div>
</div>
