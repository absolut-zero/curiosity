
<div class="row">
<div class="col-md-10 offset-md-1 form-content">
<h2>📝 All Documents</h2>
<div class="card-all-documents-container">


<% @documents.each do |document| %>

<div class="card-all-documents">

  <div class="card-all-documents-text ">

    <div class="card-all-documents-text title col-md-10 offset-md-1">
    <h4><%= link_to document.name, document_path(document), class: "btn btn-outline-primary white-btn" %></h4>
    </div>

    <div class="card-all-documents-text icons">

    <%= link_to '<i class="fas fa-trash-alt"></i><span style="padding-left: 10px;">| Delete Document</span>'.html_safe, document_path(document), method: :delete, data: { confirm: 'Are you sure?' } %>
    <br>
    <% unless document.concepts.length.zero? %>
    <%= link_to '<i class="fas fa-glasses"></i><span style="padding-left: 6px;">| Revise Concepts</span>'.html_safe, revision_sessions_doc_path(document), method: :post %>
    <% end %>
    </div>
  </div>

</div>

<% end %>

</div>

</div>

</div>
