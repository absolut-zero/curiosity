<div class="row">
<div class="col-md-8 offset-md-2 form-content">
<h2>Below are all the documents</h2>
<ul>
  <% @documents.each do |document| %>
  <li>
    <h4><%= link_to document.name, document_path(document) %></h4>
    <p><small><%= link_to "Delete", document_path(document), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% unless document.concepts.length.zero? %>
       | <%= link_to "Revise", revision_sessions_doc_path(document), method: :post %> | <%= link_to "Delete Concepts", document_concepts_path(document), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </small></p>
  </li>
<% end %>
</ul>
</div>
</div>
<br><br>


<div class="container-form">
<div class="row">
<div class="col-md-8 offset-md-2 form-content">
<h2>Create a new folder</h2>
<div class="content">
<%= simple_form_for @folder do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-action btn btn-primary">
    <%= f.button :submit %>
  </div>
<% end %>
<br>
<h2>Create a new document</h2>
<%= simple_form_for @document do |f| %>
  <%= f.error_notification %>
<!--   <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
 -->
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :folder, collection: Folder.all.order(:name) %>
    <%= f.input :notes %>
  </div>

  <div class="form-action btn btn-primary">
    <%= f.button :submit %>
  </div>

<% end %>
</div>
</div>
</div>
</div>

