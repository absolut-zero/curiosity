
<%= link_to "All Documents", documents_path  %>
<br>

<%= link_to "Delete this Document", document_path(@document), method: :delete, data: { confirm: 'Are you sure?' }  %>

<div class="container-form">
<div class="row">
<div class="col-md-8 offset-md-2 form-content">

<% if @document.concepts.length.zero? %>
  <%= simple_form_for @document, url: document_path(@document) do |f| %>
    <%= f.error_notification %>
    <%= f.input :name, value: "@document.name" %>
    <%= f.input :notes, value: "@document.notes" %>
    <%= f.input :end_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.button :submit, class: "btn-primary" %>
  <% end %>
  <%= link_to "Create Concepts", document_concepts_path(@document), { :class=>"btn btn-primary" } %>
<% else %>
  <h1><%= @document.name %></h1>
  <p><%= simple_format(@document.notes) %></p>
  <p><%= link_to "Revise", revision_sessions_doc_path(@document), method: :post %></p>
  <% unless @document.end_at.nil? %>
    <p>Schedule ends at: <%= @document.end_at %></p>
  <% end %>
<% end %>
</div>
</div>
</div>






