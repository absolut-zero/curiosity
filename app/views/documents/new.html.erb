<div class="row">
<div class="col-md-10 offset-md-1 form-content">
<%= simple_form_for @document do |f| %>
  <div class="new-document-page">
    <div class="new-document-page-header">
      <div class="folder-date">
        <%= f.input :folder, collection: Folder.all.order(:name), label: "Folder:" %>
        <%= f.input :end_at, as: :string, label: "Due:", required: false, input_html: {class: "datepicker"} %>
      </div>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="save-buttons">
        <%= f.submit "Save" , class: "form-action btn btn-primary" %>
        <%= f.submit "Save & Create Concepts", name: "save_and_create", class: "form-action btn btn-primary" %>
      </div>
    </div>
    <div class="new-document-white-page">
      <div class="new-document-name">
        <%= f.input :name, placeholder: 'Untitled Document', label: false, wrapper_html: { class: 'document-name-input' } %>
      </div>
      <div class="js-document-editor new-document-page-editor document-editor">
        <%= f.input :notes, wrapper_html: { class: 'document-editor-input' }, input_html: { class: 'js-notes-input' } %>
        <div class="js-notes-display document-editor-text"></div>
      </div>
    </div>
  </div>

<% end %>

</div>
</div>
